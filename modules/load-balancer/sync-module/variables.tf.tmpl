
variable "region" {
  type = string
  default = "${region}"
}
variable "zone_id" {
  type = string
  default = "${zone_id}"
}
variable "domain" {
  type = string
  default = "${domain}"
}
variable "services" {
  description = "Consul services monitored by Consul-Terraform-Sync"
  type = map(
    object({
      id        = string
      name      = string
      address   = string
      port      = number
      meta      = map(string)
      tags      = list(string)
      namespace = string
      status    = string

      node                  = string
      node_id               = string
      node_address          = string
      node_datacenter       = string
      node_tagged_addresses = map(string)
      node_meta             = map(string)
    })
  )
}